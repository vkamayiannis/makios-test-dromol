<!DOCTYPE html>
<html>
<head>
  <title>Μακιός - Εισαγωγή δρομολογίων</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<% if Rails.application.config.ismainapplication && user_signed_in? %>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">

        <li><%= link_to 'Δρομολόγια ΜΑΚΙΟΣ', routes_path, class: "navbar-brand" %></li>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Δρομολόγηση <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Ημερήσιο πρόγραμμα', routes_path %></li>
              <li><%= link_to 'Λίστα δρομολογίων', final_routes_path %></li>
            </ul>
          </li>
        </ul>
        <!-- <ul class="nav navbar-nav navbar-right">
          <li><%= link_to('Αποσύνδεση ' + current_user.email, destroy_user_session_path, :method => :delete) %>  </li>
        </ul> -->
        <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span>
                        <strong>Χρήστης</strong>
                        <span class="glyphicon glyphicon-chevron-down"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <div class="navbar-login">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <p class="text-center">
                                            <span class="glyphicon glyphicon-user icon-size"></span>
                                        </p>
                                    </div>
                                    <div class="col-lg-8">
                                        <p class="text-left small"><%= current_user.email %></p>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <div class="navbar-login navbar-login-session">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <p>
                                            <%= link_to('Αποσύνδεση ' + current_user.email, destroy_user_session_path, :method => :delete, class: "btn btn-danger btn-block") %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>
<%= yield %>
<%= javascript_include_tag  'application' %>
</body>
</html>
