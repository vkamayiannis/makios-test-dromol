<!DOCTYPE html>
<html>
<head>
  <title>Μακιός - Εισαγωγή δρομολογίων</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<% if Rails.application.config.ismainapplication && user_signed_in? %>
  <nav class="navbar navbar-fixed-left navbar-minimal animate" role="navigation">
  <div class="navbar-toggler animate">
    <span class="menu-icon"></span>
  </div>
  <ul class="navbar-menu animate">
    <li>
      <%= link_to routes_path, class: "animate" do %>
      <!-- <a href="#about-us" class="animate"> -->
        <span class="desc animate"> Ημερήσιο πρόγραμμα </span>
        <span class="fa fa-calendar"></span>
      <!-- </a> -->
      <% end %>
    </li>
    <li>
      <%= link_to final_routes_path, class: "animate" do %>
      <!-- <a href="#blog" class="animate"> -->
        <span class="desc animate"> Δρομολόγια </span>
        <span class="fa fa-map-marker"></span>
      <!-- </a> -->
      <% end %>
    </li>
    <li class="animate dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user"></span>
            <!-- <span class="glyphicon glyphicon-chevron-down"></span> -->
        </a>
        <ul class="dropdown-menu">
            <li>
                <div class="navbar-login">
                    <div class="row">
                        <div class="col-lg-4">
                            <p class="text-center">
                                <span class="glyphicon glyphicon-user icon-size"></span>
                            </p>
                        </div>
                        <div class="col-lg-8">
                            <p class="text-left small"><%= current_user.email %></p>
                        </div>
                    </div>
                </div>
            </li>
            <li class="divider"></li>
            <li>
                <div class="navbar-login navbar-login-session">
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                <%= link_to('Αποσύνδεση ' + current_user.email, destroy_user_session_path, :method => :delete, class: "btn btn-danger btn-block") %>
                            </p>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </li>
  </ul>
  </nav>
<% end %>
<%= yield %>
<%= javascript_include_tag  'application' %>
</body>
</html>
