<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="register-form-link">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: "login-form", method: 'post', role: "form", style: "display: block;"}) do |f| %>
									<div class="form-group">
										<%= f.email_field :email, autofocus: true,  id: "username", tabindex: "1", class: "form-control", placeholder: "Email" %>
									</div>
									<div class="form-group">
                    <%= f.password_field :password, autocomplete: "off",  id: "password", tabindex: "2", class: "form-control", placeholder: "Password" %>
									</div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="form-group text-center">
                      <%= f.check_box :remember_me, tabindex:"3", class:"", id:"remember" %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Log in", id:"login-submit", tabindex:"4", class:"form-control btn btn-info" %>
											</div>
										</div>
									</div>
                <% end -%>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "register-form", role: "form", style: "display:none;"}) do |f| %>
									<div class="form-group">
                    <%= f.email_field :email, autofocus: true, id: "email", tabindex: "1", class: "form-control", placeholder: "Email Address" %>
									</div>
									<div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", id: "password", tabindex:"2",  class:"form-control", placeholder:"Password" %>
									</div>
									<div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "off", id: "confirm-password", tabindex: "3", class: "form-control", placeholder:"Confirm Password" %>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Sign up", id: "register-submit", tabindex: "4", class: "form-control btn btn-success"%>
											</div>
										</div>
									</div>
                <% end -%>
              </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
