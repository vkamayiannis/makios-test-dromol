<p id="notice"><%= notice %></p>
<%= form_for(@route, remote: true) do |f| %>
  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
      <% @route.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :customer_id %><br>
    <%= f.text_field :customer_id %>
  </div>
  <div class="field">
    <%= f.label :route_desc %><br>
    <%= f.text_field :route_desc %>
  </div>
  <div class="field">
    <%= f.label :route_date %><br>
    <%= f.date_select :route_date %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :sales_value %><br>
    <%= f.text_field :sales_value %>
  </div>
  <div class="field">
    <%= f.label :purchases_value %><br>
    <%= f.text_field :purchases_value %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h1>Listing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Route desc</th>
      <th>Route date</th>
      <th>Quantity</th>
      <th>Sales value</th>
      <th>Purchases value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <div id = "table-lines">
          <td><%= route.customer %></td>
          <td><%= route.route_desc %></td>
          <td><%= route.route_date %></td>
          <td><%= route.quantity %></td>
          <td><%= route.sales_value %></td>
          <td><%= route.purchases_value %></td>
          <td><%= link_to 'Show', route %></td>
          <td><%= link_to 'Edit', edit_route_path(route) %></td>
          <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

